@using Dungeons_Databases.Models.Entities

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Dungeons&Databases</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        @if(user != null)
        {
            @if(user.Adventurer != null)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="adventurer/self">
                        <span class="oi oi-person" aria-hidden="true"></span> Your adventurer
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="quests">
                        <span class="oi oi-script" aria-hidden="true"></span> Quests
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="shop">
                        <span class="oi oi-cart" aria-hidden="true"></span> Shop
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="trinkets">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Trinkets
                    </NavLink>
                </div>
            }
            else
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="adventurer/create">
                        <span class="oi oi-plus" aria-hidden="true"></span> Create adventurer
                    </NavLink>
                </div>
            }
        }
    </nav>
</div>

@code {
    [Parameter]
    public UserModel? user { get; set; }

    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
