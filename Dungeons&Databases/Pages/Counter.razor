@page "/counter"
@using Npgsql;
@using Dungeons_Databases.Data;
@inject TrinketService TrinketService

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>
<p role="status">Le trinket ayant pour id @currentCount est : @trinketName</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 6;
    private string trinketName = "";


    private void IncrementCount()
    {
        currentCount++;
        trinketName = TrinketService.GetById(currentCount).Name;
    }
}
